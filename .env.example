# Backend API Configuration
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=https://+:5001;http://+:5000

# Database
ConnectionStrings__DefaultConnection=Server=localhost;Database=PerformanceSystem;User Id=sa;Password=YourStrong!Passw0rd;TrustServerCertificate=True;

# JWT Configuration
Jwt__SecretKey=YourSuperSecretKeyWith256BitsMinimumLength12345678901234567890
Jwt__Issuer=https://api.performance.local
Jwt__Audience=https://app.performance.local
Jwt__ExpirationMinutes=60

# Redis Cache
Redis__ConnectionString=localhost:6379

# Email Configuration
Email__SmtpHost=localhost
Email__SmtpPort=1025
Email__UseSsl=false
Email__Username=noreply@performance.local
Email__Password=

# SSO Configuration
SSO__Provider=Nafath
SSO__ClientId=your-client-id
SSO__ClientSecret=your-client-secret
SSO__RedirectUri=https://app.performance.local/auth/callback

# Azure Configuration (Optional)
Azure__KeyVault__Uri=https://your-keyvault.vault.azure.net/
Azure__ApplicationInsights__InstrumentationKey=your-instrumentation-key

# Logging
Logging__LogLevel__Default=Information
Logging__LogLevel__Microsoft=Warning

# CORS
CORS__AllowedOrigins=https://app.performance.local,http://localhost:3000
